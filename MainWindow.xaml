<Window x:Class="bankrupt_piterjust.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bankrupt_piterjust"
        xmlns:vm="clr-namespace:bankrupt_piterjust.ViewModels"
        mc:Ignorable="d"
        Title="ПитерЮст. Банкротство" Height="900" Width="1400"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        MinWidth="800" MinHeight="600" Icon="/fav.png">

    <Window.DataContext>
        <!-- Подключаем ViewModel -->
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Цвета -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#007BFF"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#6C757D"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="#DEE2E6"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#212529"/>

        <!-- Стили кнопок -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для всех вкладок -->
        <Style x:Key="TabRadioButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для фильтров -->
        <Style x:Key="FilterRadioButton" TargetType="RadioButton">
            <Setter Property="Background" Value="#F8F9FA"/>
            <!-- Фон как у окна -->
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для таблицы -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1: Заголовок -->
        <TextBlock Grid.Row="1" Text="Должники" FontSize="28" FontWeight="Bold" Margin="10,20,10,10" Foreground="{StaticResource DarkTextBrush}"/>

        <!-- 2: Панель поиска и действий -->
        <Grid Grid.Row="2" Margin="10,10,10,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <!-- Поле поиска с плейсхолдером -->
                <Grid Width="400">
                    <TextBox x:Name="SearchTextBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="30,8,10,8" VerticalContentAlignment="Center"
                             BorderBrush="{StaticResource BorderGrayBrush}" FontSize="14" BorderThickness="1,1,0,1"/>
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="{StaticResource TextGrayBrush}" VerticalAlignment="Center" Margin="10,0,0,0" IsHitTestVisible="False"/>
                    <TextBlock IsHitTestVisible="False" Text="Введите ФИО должника" VerticalAlignment="Center" Margin="32,0,0,0" Foreground="{StaticResource TextGrayBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <Button Content="Найти" Style="{StaticResource SecondaryButton}" Margin="0" BorderThickness="0,1,1,1"/>
            </StackPanel>

            <Button Grid.Column="1" Content="+ Добавить должника" Style="{StaticResource PrimaryButton}" Command="{Binding AddDebtorCommand}"/>
        </Grid>

        <!-- 3: Вкладки верхнего уровня -->
        <Border Grid.Row="3" BorderBrush="{StaticResource BorderGrayBrush}" BorderThickness="0,0,0,1" Margin="10,0">
            <ItemsControl ItemsSource="{Binding MainTabs}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="MainTabs" Style="{StaticResource TabRadioButton}"
                                     IsChecked="{Binding IsSelected, Mode=TwoWay}">
                            <RadioButton.Content>
                                <TextBlock>
                                    <Run Text="{Binding Name}"/>
                                    <Run Text="{Binding Count}" Foreground="{StaticResource TextGrayBrush}"/>
                                </TextBlock>
                            </RadioButton.Content>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- 4: Вкладки нижнего уровня (фильтры) -->
        <ItemsControl Grid.Row="4" ItemsSource="{Binding FilterTabs}" Margin="10,20,10,10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="FilterTabs" Style="{StaticResource FilterRadioButton}"
                                 IsChecked="{Binding IsSelected, Mode=TwoWay}">
                        <RadioButton.Content>
                            <TextBlock>
                                <Run Text="{Binding Name}"/>
                                <Run Text="{Binding Count}" Foreground="{StaticResource TextGrayBrush}"/>
                            </TextBlock>
                        </RadioButton.Content>
                    </RadioButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 5: Таблица с данными -->
        <DataGrid Grid.Row="5" Margin="10,0,10,10"
                  ItemsSource="{Binding DebtorsView}"
                  AutoGenerateColumns="False" CanUserAddRows="False" GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{StaticResource BorderGrayBrush}" BorderThickness="1" BorderBrush="{StaticResource BorderGrayBrush}"
                  Background="White" HeadersVisibility="Column" VerticalContentAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО должника" Binding="{Binding FullName}" Width="2.5*"/>
                <DataGridTextColumn Header="Субъект РФ" Binding="{Binding Region}" Width="2*"/>
                <DataGridTemplateColumn Header="Статус" Width="1.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Status}" Style="{StaticResource SecondaryButton}" Margin="5,2" Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="*"/>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="0,5"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- 6: Пагинация -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="10,10,10,0">
            <Button Content="1" Width="35" Height="35" Style="{StaticResource SecondaryButton}" IsEnabled="False" Background="#E9ECEF"/>
        </StackPanel>

    </Grid>
</Window>