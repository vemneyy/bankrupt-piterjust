<Window x:Class="bankrupt_piterjust.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bankrupt_piterjust"
        xmlns:vm="clr-namespace:bankrupt_piterjust.ViewModels"
        xmlns:converters="clr-namespace:bankrupt_piterjust.Converters"
        mc:Ignorable="d"
        Title="ПитерЮст. Банкротство." Height="720" Width="1280"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        MinWidth="800" MinHeight="600" Icon="/Images/icon.png">

    <Window.DataContext>
        <!-- Подключаем ViewModel -->
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Конвертеры -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringEqualsToVisibilityConverter x:Key="StringEqualsToVisibilityConverter"/>
        <converters:StringNotEqualsToVisibilityConverter x:Key="StringNotEqualsToVisibilityConverter"/>
        
        <!-- Цвета -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#007BFF"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#6C757D"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="#DEE2E6"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#212529"/>
        <SolidColorBrush x:Key="SlightlyDarkerGrayBrush" Color="#E9ECEF"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#212529"/>

        <!-- Стили кнопок -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SearchFindButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="BorderThickness" Value="1,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0,5,5,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StatusButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SlightlyDarkerGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для всех вкладок -->
        <Style x:Key="TabRadioButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для фильтров -->
        <Style x:Key="FilterRadioButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="backgroundBorder" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="backgroundBorder" Property="Background" Value="White"/>
                                <Setter TargetName="backgroundBorder" Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add this style definition for TabButton -->
        <Style x:Key="TabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="backgroundBorder" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="backgroundBorder" Property="Background" Value="White"/>
                                <Setter TargetName="backgroundBorder" Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hyperlink Style -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для таблицы -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Стиль для кнопок действий в DataGrid -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9ECEF"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Стиль для полей в деталях должника -->
        <Style x:Key="DetailLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,10,0,2"/>
        </Style>
        <Style x:Key="DetailValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <!-- Стиль для списка выбора статуса -->
        <Style x:Key="StatusListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E9ECEF"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Основная область таблицы -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 0: Логотип и кнопки действий -->
            <Grid Grid.Row="0" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ПитерЮст " 
                              Foreground="{StaticResource DarkTextBrush}" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              VerticalAlignment="Center" 
                              Margin="4,0,0,0"/>
                    <Border Background="{StaticResource PrimaryBlueBrush}" CornerRadius="8" Padding="12,6">
                        <TextBlock Text="Банкротство" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            
                <!-- Кнопки действий -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,-10,0">
                    <Button Content="Сменить пользователя" 
                            Command="{Binding ShowLoginWindowCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Margin="0,0,10,0" 
                            ToolTip="Сменить пользователя системы" Height="40" RenderTransformOrigin="0.5,0.5" Width="150">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="-0.139"/>
                                <RotateTransform/>
                                <TranslateTransform Y="-0.188"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 1: Заголовок -->
            <TextBlock Grid.Row="1" Text="Должники" FontSize="28" FontWeight="Bold" Margin="10,20,10,10" Foreground="{StaticResource DarkTextBrush}"/>

            <!-- 2: Панель поиска и действий -->
            <Grid Grid.Row="2" Margin="10,10,10,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Border BorderBrush="{StaticResource BorderGrayBrush}" BorderThickness="1" CornerRadius="5" Background="White">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="350">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="10,0" Foreground="{StaticResource TextGrayBrush}"/>
                                <TextBox Grid.Column="1" x:Name="SearchTextBox"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="5,8" VerticalContentAlignment="Center" FontSize="14" BorderThickness="0"/>
                                <TextBlock Grid.Column="1" IsHitTestVisible="False" Text="Введите ФИО должника" VerticalAlignment="Center" Foreground="{StaticResource TextGrayBrush}" Margin="5,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <Button Content="Найти" Style="{StaticResource SearchFindButton}" Width="70"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Button Grid.Column="1" Content=" + Добавить должника " Style="{StaticResource PrimaryButton}" Command="{Binding AddDebtorCommand}" HorizontalAlignment="Left"/>
            </Grid>

            <!-- 3: Вкладки верхнего уровня -->
            <Border Grid.Row="3" BorderBrush="{StaticResource BorderGrayBrush}" BorderThickness="0,0,0,1" Margin="10,0">
                <ListBox ItemsSource="{Binding MainTabs}" 
                     SelectedItem="{Binding SelectedMainTab}" 
                     BorderThickness="0" 
                     Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <RadioButton GroupName="MainTabs" 
                                                 Style="{StaticResource TabRadioButton}"
                                                 IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}">
                                            <RadioButton.Content>
                                                <ContentPresenter />
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding Name}"/>
                                <Run x:Name="CountRun" Text="{Binding Count}" Foreground="{StaticResource TextGrayBrush}"/>
                            </TextBlock>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="CountRun" Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- 4: Вкладки нижнего уровня (фильтры) -->
            <ListBox Grid.Row="4" ItemsSource="{Binding CurrentFilterTabs}" 
                 SelectedItem="{Binding SelectedFilterTab}"
                 BorderThickness="0" 
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Margin="10,20,10,10">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <RadioButton GroupName="FilterTabs" 
                                             Style="{StaticResource FilterRadioButton}"
                                             IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}">
                                        <RadioButton.Content>
                                            <ContentPresenter />
                                        </RadioButton.Content>
                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            <Border Background="{StaticResource SlightlyDarkerGrayBrush}" CornerRadius="10" Margin="8,0,0,0" Padding="7,3" MinWidth="20">
                                <TextBlock Text="{Binding Count}" Foreground="{StaticResource TextGrayBrush}" FontSize="12" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- 5: Таблица с данными -->
            <Grid Grid.Row="5" Margin="10,0,10,10">
                <DataGrid ItemsSource="{Binding DebtorsView}"
                      SelectedItem="{Binding SelectedDebtor}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      CanUserResizeRows="False"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      Background="Transparent" 
                      HeadersVisibility="Column"
                      HorizontalGridLinesBrush="{StaticResource BorderGrayBrush}"
                      VerticalContentAlignment="Center"
                      RowHeight="44">
                    <DataGrid.Resources>
                        <!-- Убираем фокусный прямоугольник и стандартное выделение строки -->
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="#212529"/>
                    </DataGrid.Resources>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Padding" Value="0,5"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="14"/>
                            <!-- Отменяем стандартное выделение строки -->
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <!-- Добавляем стиль для ячеек, чтобы убрать рамку выделения -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="ФИО должника" Width="1.5*">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FullName}" Foreground="{StaticResource DarkTextBrush}" Cursor="Hand"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Субъект РФ" Width="2*">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Region}" Margin="10,0" VerticalAlignment="Center" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Статус" Width="1.5*">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Status}" 
                                            Height="25" 
                                            Style="{StaticResource StatusButton}" 
                                            Margin="5,2"
                                            Command="{Binding DataContext.ShowStatusSelectionCommand, 
                                                      RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Дата заключения договора" Width="*">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date}" Margin="10,0" VerticalAlignment="Center" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            
                <!-- Сообщение при отсутствии должников -->
                <TextBlock Text="Пока здесь нет ни одного должника." 
                       FontSize="16" 
                       Foreground="{StaticResource TextGrayBrush}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,50,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DebtorsView.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- 6: Пагинация -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="10,10,10,0">
                <Button Content="1" Width="35" Height="35" Style="{StaticResource SecondaryButton}" IsEnabled="False" Background="#E9ECEF"/>
            </StackPanel>
        </Grid>
        
        <!-- Правая панель с деталями должника -->
        <Border Grid.Column="1" 
                Visibility="{Binding IsDebtorSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                Background="White" 
                BorderBrush="{StaticResource BorderGrayBrush}" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="10,0,0,0" 
                Padding="20" 
                Width="320">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- View mode -->
                    <StackPanel x:Name="ViewPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <!-- Заголовок -->
                        <TextBlock Text="Информация о должнике" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource DarkTextBrush}"
                                  Margin="0,0,0,20"/>

                        <!-- Основные данные -->
                        <TextBlock Text="ФИО" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBlock Text="{Binding SelectedDebtor.FullName}" Style="{StaticResource DetailValueStyle}"/>

                        <TextBlock Text="Регион" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBlock Text="{Binding SelectedDebtor.Region}" Style="{StaticResource DetailValueStyle}"/>

                        <TextBlock Text="Категория" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBlock Text="{Binding SelectedDebtor.MainCategory}" Style="{StaticResource DetailValueStyle}"/>

                        <TextBlock Text="Подкатегория" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBlock Text="{Binding SelectedDebtor.FilterCategory}" Style="{StaticResource DetailValueStyle}"/>

                        <TextBlock Text="Дата заключения договора" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBlock Text="{Binding SelectedDebtor.Date}" Style="{StaticResource DetailValueStyle}"/>
                        
                        <!-- Кнопки действий -->
                        <Button Content="Сгенерировать договор" 
                                Command="{Binding GenerateContractCommand}" 
                                Style="{StaticResource PrimaryButton}" 
                                IsEnabled="{Binding CanGenerateContract}"
                                Height="40"
                                Margin="0,30,0,0"/>

                        <Button Content="Добавить в архив"
                                Command="{Binding ArchiveDebtorCommand}" 
                                CommandParameter="{Binding SelectedDebtor}"
                                Style="{StaticResource SecondaryButton}" 
                                Height="40"
                                Margin="0,10,0,0"
                                Visibility="{Binding SelectedDebtor.MainCategory, Converter={StaticResource StringNotEqualsToVisibilityConverter}, ConverterParameter=Архив}"/>

                        <Button Content="Восстановить из архива"
                                Command="{Binding RestoreDebtorCommand}"
                                CommandParameter="{Binding SelectedDebtor}"
                                Style="{StaticResource SecondaryButton}"
                                Height="40"
                                Margin="0,10,0,0"
                                Visibility="{Binding SelectedDebtor.MainCategory, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=Архив}"/>

                        <Button Content="Редактировать"
                                Command="{Binding EditDebtorCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Height="40"
                                Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- Edit mode -->
                    <StackPanel x:Name="EditPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Редактирование" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <TextBlock Text="Фамилия" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedPerson.LastName}" Margin="0,2,0,10"/>

                        <TextBlock Text="Имя" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedPerson.FirstName}" Margin="0,2,0,10"/>

                        <TextBlock Text="Отчество" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedPerson.MiddleName}" Margin="0,2,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Content="Мужской" IsChecked="{Binding SelectedPerson.IsMale}" Style="{StaticResource TabButton}"/>
                            <RadioButton Content="Женский" IsChecked="{Binding SelectedPerson.IsMale, Converter={StaticResource BooleanToInverseConverter}}" Style="{StaticResource TabButton}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Телефон" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedPerson.Phone}" Margin="0,2,0,10"/>

                        <TextBlock Text="Email" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedPerson.Email}" Margin="0,2,0,10"/>

                        <TextBlock Text="Статус" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedDebtor.Status}" Margin="0,2,0,10"/>

                        <TextBlock Text="Категория" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedDebtor.MainCategory}" Margin="0,2,0,10"/>

                        <TextBlock Text="Подкатегория" Style="{StaticResource DetailLabelStyle}"/>
                        <TextBox Text="{Binding SelectedDebtor.FilterCategory}" Margin="0,2,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Сохранить" Command="{Binding SaveDebtorCommand}" Style="{StaticResource PrimaryButton}" Width="120" Margin="0,0,10,0"/>
                            <Button Content="Отмена" Command="{Binding CancelEditCommand}" Style="{StaticResource SecondaryButton}" Width="120"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
        
        <!-- Popup for status selection -->
        <Border Grid.Column="0" Grid.ColumnSpan="2"
                Background="#80000000"
                Visibility="{Binding IsStatusSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White"
                    BorderBrush="{StaticResource BorderGrayBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Width="300"
                    MaxHeight="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Выберите статус" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding AvailableStatuses}"
                             SelectedItem="{Binding SelectedStatus}"
                             BorderThickness="0"
                             Background="Transparent"
                             Margin="0,10,0,10"
                             ItemContainerStyle="{StaticResource StatusListItem}"/>
                    
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,10,0,0">
                        <Button Content="Отмена" 
                                Command="{Binding CancelStatusSelectionCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Width="100"
                                Margin="0,0,10,0"/>
                        <Button Content="Применить" 
                                Command="{Binding ChangeStatusCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>